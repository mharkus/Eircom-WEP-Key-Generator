<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:padding="10px">

	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="eircom"
			android:textSize="24px" android:paddingRight="10px" />
		<EditText android:id="@+id/ssid" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:hint="Enter SSID here" />
	</LinearLayout>

	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:textSize="24px"
		android:id="@+id/wepLabel" android:text="WEP Key: " android:paddingBottom="10px" android:paddingTop="20px"/>

	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:id="@+id/key"
		android:maxLines="4" android:textSize="24px" android:layout_weight="1.0" />

	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<Button android:id="@+id/generateButton" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="Generate"
			android:padding="10px" android:layout_weight="1" />
		<Button android:id="@+id/copyButton" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="Copy WEP Key"
			android:padding="10px" android:layout_weight="1" />
	</LinearLayout>
</LinearLayout>
